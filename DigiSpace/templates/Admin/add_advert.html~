function setDatePicker(startDate,endDate){
 $( ".date-picker1" ).datepicker({

 minDate: new Date(startDate),
 maxDate: new Date(endDate),
 // dateFormat:'dd-mm-yy'
		});
		}



function validateService(service){

var radioValue = $("input[name='service']:checked").val();
if(radioValue)
{

   $(service).parent().children('.error').css("display", "none");
   return true;
}
else{

	$(service).parent().children('.error').css("display", "block");
   $(service).parent().children('.error').text("Please select Service");
   return false;
}
}

function validateDuration(duration){

var radioValue = $("input[name='duration']:checked").val();

if(radioValue)
{

   $('#selectedDuration').css("display", "none");
   return true;
}
else{

	$('#selectedDuration').css("display", "block");
   $('#selectedDuration').text("Please select Duration");
   return false;
}
}

function validateDate(){


if($("#dt1").val()!='' || $("#dt3").val()!='' || $("#dt5").val()!='' || $("#dt7").val()!='' || $("#dt9").val()!='')
{

   $(duration).parent().children('.error').css("display", "none");
   return true;
}
else{

	$(duration).parent().children('.error').css("display", "block");
   $(duration).parent().children('.error').text("Please select Start Date");
   return false;
}
}



function validateDate1(){
var result = isStartDateTextfieldEmpty();
if(result==false){
	$('#startdateemptyerror').text("Please select Start Date");
   $('#startdateemptyerror').css("display", "block");
   return false;
}
else{
  $('#startdateemptyerror').css("display", "none");
  	return true;
}
}

 function isStartDateTextfieldEmpty(){

var status= true;
 $.each($("input[name='premium_service']:checked"), function(){
          var value = $(this).parents().eq(4).next('div').find('input').val().trim();

          if(value != '')
          {
           return true;
          }
          else{

           status = false;
           return false;
          }

   });

return status;
}

function isDayEmpty(){

var status= true;
 $.each($("input[name='premium_service']:checked"), function(){
		id = $(this).parents().eq(4).next('div').find('input').attr('id');
		var value = $('#'+id).parent('div').next('div').find('select').val();
          if(value != null)
          {
           return true;
          }
          else{
           status = false;
           return false;
          }

   });
return status;
}

function checkDays(){
x=0;
 $.each($("input[name='premium_service']:checked"), function(){
id = $(this).parents().eq(4).next('div').find('input').attr('id');
id1 = $('#'+id).parent('div').next('div').find('select').val();
val = isNaN(parseInt(id1))? 0 : parseInt(id1)
x = x + val
 });
if(x<=totalDays)
{
   $('#mismatch-days').css("display", "none");
   return true;
}
else{
	$('#mismatch-days').css("display", "block");
   $('#mismatch-days').text("Premium service days should be less than or equal to Duration");
   return false;
}
}

subscriber_id = '';

function days(){

var result = isDayEmpty();
if(result==false){
	$(premium_service).parent().children('.error').css("display", "block");
   $(premium_service).parent().children('.error').text("Please select No of Days");
   return false;
}
else{
   $(premium_service).parent().children('.error').css("display", "none");
  	return true;
}
}

function checkService(){

	if(validateService("#service")&validateDuration("#duration")){
		return true;
	}
	return false;
}

function checkDate()
{
if(validateDate("#duration")&validateDate1())
{
return true;
}
return false;
}


