						  $('#ac_attachment').val(reordered_array);
						  $('#ac_attachments').val(reordered_array);

                });

                 this.on("removedfile", function(file){
							deleting_image_id = reordered_array[temp_image_files.indexOf(file)];

		          		$.ajax({url: "/active-files-remove/?image_id="+deleting_image_id, success: function(result){
