/*checking start date and end date*/
function validateStartAndEndDates(){
    var status = true;
    var msg = "";
     $.each($("input[name='premium_service']:checked"), function(){
               var startdate = $(this).parents().eq(4).next('div').find('input').val();
               var enddate = $(this).parents().eq(5).children().last().find('input').val();

                if(startdate == ''){
                    status = false;
                    msg = "Please select advert start date";
                    return false;
                }

                else if(enddate == ''){
                    status = false;
                    msg = "Please select advert end date";
                    return false;
                }

       });
     if(!status){
     $("#mismatch-days").text(msg);
     $("#mismatch-days").css('display','block');
        }
        else{
    $("#mismatch-days").css('display','none');
        }
     return status;
}



function redirect_to_retails()
{
	$("#affiliate-modal2").modal('hide');
		var premium_service_list = [];
		var premium_day_list = [];
     $.each($("input[name=premium_service]:checked"), function(){
                premium_day_list.push(($(this).parents().eq(4).next('div').next('div').find('select').val())+ ' Days');
                premium_service_list.push($(this).val());
       })

		 $("#form_wizard_1").bootstrapWizard('show',2);
		  $('#show_subscriber_id').text(subscriber_id);
		  $('#show_advert_title').text($('#advert_title').val());
		  $('#show_category').text($("#categ").val());
		  $('#show_service').text($("input[name='service']:checked").val());
		  $('#show_duration').text($("input[name='duration']:checked").val()+ ' Days');
		 $('#show_premium_service_duration').text(premium_day_list);
		$('#show_premium_service').text(premium_service_list);


}



$("#continue-detail").click(function(event){
event.preventDefault();
var premium_service_list = [];
var premium_day_list = [];

      $.each($("input[name='premium_service']:checked"), function(){
                premium_day_list.push($(this).parents().eq(4).next('div').next('div').find('select').val());
                premium_service_list.push($(this).val());
       });

 var formData= new FormData();
formData.append("category",$("input[name='category']:checked").val());
formData.append("service",$("input[name='service']:checked").val());
formData.append("duration",$("input[name='duration']:checked").val());
formData.append("premium_service_list",premium_service_list);
formData.append("premium_day",premium_day_list);


		$.ajax({
			  type	: "POST",
			   url : '/get-amount/',
				 data : formData,
					cache: false,
		         processData: false,
		    		contentType: false,

		     success: function (response) {
		        if(response.success=='true'){
		         $("#generated_amount").val(response.cost);
		         $("#form_wizard_1").bootstrapWizard('show',3);
		        	}
					if (response.success == "false") {
						$("#error-modal").modal('show');
		 			}
		      },
		      				beforeSend: function () {
            $("#processing").css('display','block');
            },
            complete: function () {
                $("#processing").css('display','none');
            },
		      error : function(response){
		         	alert("_Error");
		   	}
		  });



});

function check_advert(id)
{
var check_id = id;

id = $('#'+check_id).parents().eq(4).next('div').find('input').attr('id');
id1 = $('#'+id).parent('div').next('div').find('select').attr('id');
id2 = $('#'+id1).parent('div').next('div').find('input').attr('id');

var flag = document.getElementById(id).hasAttribute("disabled");

if(flag == false)
{
$('#'+id).attr("disabled", 'disabled');
$('#'+id1).attr("disabled", 'disabled');
$('#'+id).val('');
$('#'+id1).select2('val','0');
$('#'+id2).val('');
}
else{
 $('#'+id).removeAttr("disabled");
}
}


function check_data()
{
if(checkTax("#tax_type")&checkPaymentMode()&checkbank()& checkbankbranch()&checknumber()&checkNote("#note")&checkPaidAmount('#paid_amount')){
		return true;
	}
	return false;
}


function checkTax(tax_type){

 if($(tax_type).val()!='' && $(tax_type).val()!=null)
   {

   $(tax_type).parent().children('.error').css("display", "none");
   return true;
   }

   else {

    $('#tax_type').parent().children('.error').css("display", "block");
    $('#tax_type').parent().children('.error').text("Please select Tax Type");
   return false;
   }
}

function checkPaymentMode()
{
payment_mode = $("input[name='payment_mode']:checked").val()
if(payment_mode)
{

  $("#payment_mode").parent().find('.error').css("display", "none");
   return true;
}
else
{

	$("#payment_mode").parent().find('.error').css("display", "block");
   $("#payment_mode").parent().find('.error').text("Please select Payment mode");
   return false;
}
}

function checkNote(note){
	note = $(note).val()
	note = note.trim()
 	if(note!='')
	{

	  $("#note").parent().find('.error').css("display", "none");
	return true;
	}
	else{

	$("#note").parent().find('.error').css("display", "block");
   $("#note").parent().find('.error').text("Please enter Note");
   return false;
   }
}

function checkPaidAmount(paid_amount){

	amount = $(paid_amount).val()
	payable_amount = $(payable_amount).val()
 	if(amount=='')
	{

	  $("#paid_amount").parent().find('.error').css("display", "none");
	return true;
	}
	else{

	if(parseInt(amount) > parseInt(payable_amount)){
	$("#paid_amount").parent().find('.error').css("display", "block");
   $("#paid_amount").parent().find('.error').text("Paid amount shoul be less than Payable Amount");
   return false;
   }
   else{
	  $("#paid_amount").parent().find('.error').css("display", "none");
	return true;

   }
   }
}

function checkbank()
{
payment_mode = $("input[name='payment_mode']:checked").val()
var namePattern = /^[0-9]*$/;
var bank =  $("#bank_name").val();
if(payment_mode=="cheque")
{ 
        if($("#bank_name").val()==""){
            $("#bank_name").parent().find('.error').css("display", "block");
        $("#bank_name").parent().find('.error').text("Please enter Bank Name");
        return false;
}else{
        
        if(namePattern.test(bank)){
        $("#bank_name").parent().find('.error').css("display", "block");
        $("#bank_name").parent().find('.error').text("Please enter valid Bank Name");
        return false;
        
        }else{

            $("#bank_name").parent().find('.error').css("display", "none");
        return true;
        }
}

}
else
{
   return true; 
}
}

function checkbankbranch()
{
payment_mode = $("input[name='payment_mode']:checked").val()
var namePattern = /^[0-9]*$/;
var bankbranch =    $("#bank_branch_name").val();
if(payment_mode=="cheque")
{ 
        if($("#bank_branch_name").val()==""){
            $("#bank_branch_name").parent().find('.error').css("display", "block");
        $("#bank_branch_name").parent().find('.error').text("Please enter Bank Branch Name");
        return false;
}else{
    if(namePattern.test(bankbranch)){
        $("#bank_branch_name").parent().find('.error').css("display", "block");
        $("#bank_branch_name").parent().find('.error').text("Please enter valid Bank Branch Name");
        return false;
    }else{
        $("#bank_branch_name").parent().find('.error').css("display", "none");
   return true;
   }
}

}
else
{
   return true; 
}
}

function checknumber()
{
payment_mode = $("input[name='payment_mode']:checked").val()
if(payment_mode=="cheque")
{ 
        if($("#cheque_number").val()==""){
            $("#cheque_number").parent().find('.error').css("display", "block");
        $("#cheque_number").parent().find('.error').text("Please enter Cheque Number");
        return false;
}else{
 $("#cheque_number").parent().find('.error').css("display", "none");
   return true;
}

}
else
{
   return true; 
}
}


$('.save-advert').click(function(event){
event.preventDefault();
if(check_data()){

        advert_keywords = $("#advert_keywords").val();
        advert_keywords = $('#advert_keywords').val().split(",");
        var a = advert_keywords.length;
        
        if (a > 75) {           
            $('#error-message1').text('Maximum limit for keywords is 75');
            $('#error-modal1').modal('show');
            return false;
        }

        //formData.append("advert_keywords",advert_keywords);

		var formData= new FormData();
		formData.append("business_id",business_id);

		payment_mode = $("input[name='payment_mode']:checked").val()
		formData.append("payment_mode",payment_mode);
        formData.append("cheque_number",$('#cheque_number').val());
        formData.append("bank_branch_name",$('#bank_branch_name').val());
        formData.append("bank_name",$('#bank_name').val());
		formData.append("generated_amount",$('#generated_amount').val());
		formData.append("payable_amount",$('#payable_amount').val());
		formData.append("paid_amount",$('#paid_amount').val());
		formData.append("note",$('#note').val());
		formData.append("selected_tax_type",selected_tax_type);


	$.ajax({
			  type	: "POST",
			  url : '/advert-detail/',
				 data : formData,
				cache: false,
		       processData: false,
		    		contentType: false,

		     success: function (response) {
		        if(response.success=='true'){
		        user_id = response.user_id
		        $("#affiliate-modal4").modal('show');
		         $("#transaction_code4").text(response.payment_code);
		        	}
					if (response.success == "false") {
						$("#error-modal").modal('show');
		 			}
		      },
		      				beforeSend: function () {
            $("#processing").css('display','block');
            },
            complete: function () {
                $("#processing").css('display','none');
            },
		      error : function(response){
		         	alert("_Error");
		   	}
		  });

}
});



