		   else if(namePattern.test(Area)){
		   	$(area).parent().children('.error').css("display", "block");
		  	 	$(area).parent().children('.error').text("Please enter valid Area");

		   return false;
		   }else{
		 	$(area).parent().children('.error').css("display", "none");
		   return true;
		   }
		}


