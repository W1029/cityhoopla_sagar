                    $("#pro_mark_rate").parent().children('.error').text("Please enter Property Market Rate");
                  isValid = false;
               }else{

                    $("#pro_mark_rate").parent().children('.error').css("display", "none");
                isValid =  true;
               }
               return isValid;

        }
        
            function check_poss_status(){
         var isValid = false;
