//tax calculator
var final_q;
function changeprice_edit()
{
	if($("#tax_type").val()==15)
	{
	selected_tax_type = 'Service Tax 15%'
	}
	else
	{
	selected_tax_type = 'VAT 4%'
	}

	var price=$("#generated_amount").val();
	var tax=$("#tax_type").val();
	var amount=(tax/100)*price;
	final_q= parseFloat(price) +parseFloat(amount);
	$("#payable_amount").val(final_q);
}


 function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57 || charCode == 43 || charCode == 45 ))
            return false;
        return true;
    }

    function validateFloatKeyPresss(el, evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        var number = el.value.split('+');
        var number1 = el.value.split('-');
        if (charCode != 45 && charCode != 43 && charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        //just one dot
        if (number.length > 1 && charCode == 43) {
            return false;
        }
        if (number1.length > 1 && charCode == 45) {
            return false;
        }
        return true;
    }

    function checkFileSize(){
   		var IMAGE;
			var IMAGE1;

			if($("#image_space").val()==""){
					IMAGE = 0;

			} else{
					IMAGE1 = $("#image_space").val();
				 IMAGE =  parseInt(IMAGE1);

			}

			var VIDEO;
			var VIDEO1;

			if($("#video_space").val()==""){
					VIDEO = 0;

			} else{
					VIDEO1 = $("#video_space").val();
				 VIDEO =  parseInt(VIDEO1);

			}



   	var TOTAL_FILE_SIZE = IMAGE + VIDEO ;

   	$("#image_and_video_space").val(TOTAL_FILE_SIZE);

   	if(TOTAL_FILE_SIZE > 2097152){
   			TOTAL_FILE_SIZE = TOTAL_FILE_SIZE/1048576;
   			TOTAL_FILE_SIZE = TOTAL_FILE_SIZE.toFixed(2);
   			$("#error-msg").html('');
   		$("#error-msg").append(" Your have uploaded " + TOTAL_FILE_SIZE + " MB of Images and Videos");

   	 $("#extra_space").modal('show');


			return false;

   	}

    }

</script>



    </body>

</html>
