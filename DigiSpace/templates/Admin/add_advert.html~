Date.prototype.addDays = function(days) {
    this.setDate(this.getDate() + parseInt(days));
    return this;
};


$('.days').on('select2:close', function(e){
    var prevDate = $(this).parent('div').prev('div').children('input').val();
//var nextDate = $(this).parent('div').next('div').children('input').datepicker('getDate');
var days = $(this).val();
if(days == null){
    days = 0;
}
var day1 = days
var day = parseInt(day1) -1;
premium_day.push(days);
premium_start_date.push(prevDate);

var date =  new Date(prevDate);
date.addDays(day);
value = days;

var mo =  ((date.getMonth() + 1) < 10) ?'0'+(date.getMonth() + 1) : (date.getMonth() + 1);
var d = (date.getDate() < 10) ? '0'+date.getDate() : date.getDate();

date =   mo+'/' + d + '/' +  date.getFullYear();



if(date<=duration_end_date){
   $('#mismatch-days').css("display", "none");


 if(days == 0){
   $(this).parent('div').next('div').children('input').removeAttr('value');

}else{
    $(this).parent('div').next('div').children('input').val(date);
    premium_end_date.push(date.toString());
}
}
else{
    $('#mismatch-days').css("display", "block");
   $('#mismatch-days').text("Premium Service end date should be less than or equal to Duration end date ");
}


});

